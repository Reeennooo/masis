mixin tooltip-leak()
  +tooltip({title: 'Новая утечка', button: {txt: 'Добавить'}}).tooltip-leak
    .tooltip__main
      .tooltip__item
        .tooltip__name Когда началась
        .tooltip__value
          .tooltip__date
            .tooltip__date-title 
              span Выберите дату
              svg.svg
                use(xlink:href='img/sprite.svg#calendar')
            .tooltip__date-options
              +btn('Сейчас', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 2 ч', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 4 ч', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 6 ч', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 8 ч', '', '', 'mode-text').tooltip__date-btn
      .tooltip__item
        .tooltip__name Когда закончилась
        .tooltip__value
          .tooltip__date
            .tooltip__date-title 
              span Выберите дату
              svg.svg
                use(xlink:href='img/sprite.svg#calendar')
            .tooltip__date-options
              +btn('Сейчас', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 2 ч', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 4 ч', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 6 ч', '', '', 'mode-text').tooltip__date-btn
              +btn('+ 8 ч', '', '', 'mode-text').tooltip__date-btn
      .tooltip__item
        .tooltip__name Категория
        .tooltip__value
          +select({inputName: 'leak-category', placeholder: 'Выберите категорию', inputSearch: false})
            +selectListItem("Технологический сброс")
            +selectListItem("Технологический вброс")
            +selectListItem("Технологический выброс")
      .tooltip__item
        .tooltip__name Давление, м
        .tooltip__value
          +input('pressure', 'text', 'Укажите величину')